RewriteEngine On

# ---------------------------
# 1. Serve existing static files like /info/abc.html
# ---------------------------
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^info/([^/.]+)\.html$ info/$1.html [L]

# ---------------------------
# 2. All other /info/... traffic goes to SPA (index.html)
# ---------------------------
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^info/.*$ /index.html [L]





